<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50px"
            android:id="@+id/previous_page"
            android:src="@drawable/previouspage"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/previous_page_hint"
            android:gravity="center"
            android:text="点击加载上一页"/>
    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="16dp"
        android:background="#ffffff"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="使用娱乐类型APP时间"
        android:gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100px"
        android:layout_marginTop="200px"
        android:gravity="left|bottom"
        >
        <TextView
            android:id="@+id/trendPrompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="娱乐趋势"
            android:textSize="11pt"

            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/trendPic"
            android:layout_width="120px"
            android:layout_height="80px"
            android:layout_toRightOf="@id/trendPrompt"

            android:src="@drawable/up"/>
        <TextView
            android:id="@+id/trendData"
            android:layout_width="wrap_content"
            android:layout_height="80px"
            android:layout_toRightOf="@id/trendPic"

            android:textSize="11pt"/>
    </RelativeLayout>

</LinearLayout>