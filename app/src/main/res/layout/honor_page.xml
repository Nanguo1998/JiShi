<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:text="勋章墙"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="@drawable/totalfights"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TableRow>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                >
                <TextView
                    android:id="@+id/nineTimes"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="256次"
                    android:gravity="center_horizontal|bottom"

                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:background="@drawable/nineunfinished"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_gravity="center_horizontal"
                    android:text="超神"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                >
                <TextView
                    android:id="@+id/eightTimes"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="256次"
                    android:gravity="center_horizontal|bottom"

                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:background="@drawable/eightunfinished"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_gravity="center_horizontal"
                    android:text="接近神"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                >
                <TextView
                    android:id="@+id/sevenTimes"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="256次"
                    android:gravity="center_horizontal|bottom"

                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:background="@drawable/sevenunfinished"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_gravity="center_horizontal"
                    android:text="暴走状态"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                >
                <TextView
                    android:id="@+id/sixTimes"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="256次"
                    android:gravity="center_horizontal|bottom"

                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:background="@drawable/sixunfinished"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_gravity="center_horizontal"
                    android:text="主宰模式"/>
            </LinearLayout>
        </TableRow>
        <TableRow>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/fiveTimes"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="256次"
                    android:gravity="center_horizontal|bottom"

                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:background="@drawable/fiveunfinished"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_gravity="center_horizontal"
                    android:text="无人可挡"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/fourTimes"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="256次"
                    android:gravity="center_horizontal|bottom"

                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:background="@drawable/fourunfinished"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_gravity="center_horizontal"
                    android:text="势不可挡"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/maxTimes"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="256次"
                    android:gravity="center_horizontal|bottom"

                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:background="@drawable/unmaxvictory"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_gravity="center_horizontal"
                    android:text="最高连胜"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/maxPeople"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:text="256次"
                    android:gravity="center_horizontal|bottom"

                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:background="@drawable/unmaxslain"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_gravity="center_horizontal"
                    android:text="击败人数"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:text="段位"
        android:gravity="center"
        android:textSize="18dp"
        android:textStyle="bold"
        android:background="@drawable/totalfights"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageRange"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/jinshi"/>
            <TextView
                android:id="@+id/curYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="2018年"
                android:textColor="@color/other_color"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">
            <TextView
                android:id="@+id/textRange"
                android:text="进士 IV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/other_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总场次"
                    android:textColor="@color/black"/>
                <TextView
                    android:text="792场"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/totalFights"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/other_color"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="胜点"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:text="45胜点"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/leftVictoryPoint"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/other_color"/>
            </LinearLayout>
            <com.icebreaker.timelapse.person.HonorTextProgressBar
                android:id="@+id/progresss"
                android:layout_width="match_parent"
                android:layout_height="25dp"

                style="@style/tallerProgressBar"
                android:max="100"
                android:progress="0"
                android:layout_marginTop="8dp"
                />
            </LinearLayout>
        </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/divider_color"/>
    </LinearLayout>


    </LinearLayout>