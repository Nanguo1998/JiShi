<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/record_item"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        />
<RelativeLayout
android:layout_width="match_parent"
android:layout_height="match_parent"

    >
    <ImageView
        android:id="@+id/imageResult"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/victory"
        android:layout_marginLeft="30dp"/>
    <TextView
        android:id="@+id/textResult"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:textSize="15dp"
        android:layout_toRightOf="@id/imageResult"

        android:layout_alignTop="@id/imageResult"
        android:layout_marginLeft="10dp"
        android:text="胜利"/>
    <TextView
        android:id="@+id/unfinishedNum"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textSize="15dp"
        android:layout_below="@id/textResult"
        android:layout_toRightOf="@id/imageResult"
        android:layout_alignBottom="@id/imageResult"
        android:layout_marginLeft="10dp"
        android:paddingTop="3dp"
        android:text="3项未达标"
        />
    <TextView
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_toLeftOf="@id/expand"
        android:layout_centerInParent="true"
        android:text="05-25 7:30"
        android:layout_marginRight="5dp"
        />
    <ImageView
        android:id="@+id/expand"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/expand"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="27dp"/>

</RelativeLayout>
    <TextView

        android:layout_width="match_parent"
        android:layout_height="5dp"
       />
</LinearLayout>